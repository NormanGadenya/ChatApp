<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campaign">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Campaign">
        <activity
            android:name=".Activities.sendImage"
            android:parentActivityName=".Activities.ChatActivity"
            ></activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/Theme.Campaign.NoActionBar" />
        <activity
            android:name=".Activities.UserProfileActivity"
            android:parentActivityName=".Activities.ChatActivity"
            android:theme="@style/Theme.Campaign.NoActionBar" />
        <activity android:name=".Activities.MainActivity" />
        <activity
            android:name=".Activities.UserListActivity"
            android:parentActivityName=".Activities.MainActivity"
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name=".Activities.ChatActivity"
            android:parentActivityName=".Activities.MainActivity" />
        <activity
            android:name=".Activities.ViewImageActivity"
            android:parentActivityName=".Activities.ChatActivity"
            android:theme="@style/Theme.Campaign" />
        <activity
            android:name=".Activities.RegistrationActivity"
            android:theme="@style/Theme.Campaign.NoActionBar"></activity>
        <activity
            android:name=".Activities.OtpActivity"
            android:theme="@style/Theme.Campaign.NoActionBar" />
        <activity
            android:name=".Activities.SignUpActivity"
            android:theme="@style/Theme.Campaign.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".Notifications.MyFirebaseIdService" />
    </application>

</manifest>