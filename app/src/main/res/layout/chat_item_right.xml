<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/chatItemLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_male_avatar_svgrepo_com"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/background_right"
                    android:padding="8dp"
                    android:layout_height="wrap_content">

                    <com.zolad.zoominimageview.ZoomInImageView
                        android:id="@+id/imageView"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:background="@drawable/rounded_outlines"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@+id/time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_male_avatar_svgrepo_com" />


                    <TextView
                        android:id="@+id/show_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="200dp"
                        android:padding="5dp"
                        android:text="yes"
                        android:textIsSelectable="true"
                        android:textColor="@android:color/primary_text_light"
                        android:visibility="visible"
                        app:layout_constraintEnd_toStartOf="@+id/time"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:padding="5dp"
                        android:text="00:00"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/message_status"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/message_status"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:elevation="10dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/time"
                        app:srcCompat="@drawable/circle_read" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView"
                        app:layout_constraintEnd_toEndOf="@+id/imageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</RelativeLayout>